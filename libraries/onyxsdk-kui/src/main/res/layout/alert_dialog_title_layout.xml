<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/global_dialog_tittle_bar"
    android:minHeight="@dimen/button_minHeight">

    <TextView
        android:id="@+id/textView_title"
        style="@style/global_dialog_tittle_bar_textView"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/global_dialog_line_margin_left_right"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/button_function_panel" />

    <ImageView
        android:id="@+id/button_close"
        android:layout_width="@dimen/dialog_close_width_and_height"
        android:layout_height="@dimen/dialog_close_width_and_height"
        android:padding="@dimen/dialog_close_padding"
        android:layout_marginRight="@dimen/dialog_close_padding"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_button_click_solid"
        app:srcCompat="@drawable/ic_cancel"
        android:focusable="true" />

    <View
        android:id="@+id/top_divider_line"
        style="@style/single_line_X_axis_View"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp" />
</RelativeLayout>