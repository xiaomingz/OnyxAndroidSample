<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <RelativeLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dialog_media_player_padding">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_media_player_padding"
            android:layout_marginTop="@dimen/dialog_media_player_padding"
            android:layout_toLeftOf="@+id/play_bar"
            android:singleLine="true"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginTop="@dimen/small_margin"
            android:textSize="@dimen/normal_text_size" />

        <LinearLayout
            android:id="@+id/play_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/media_bar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dialog_media_player_padding"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/prev"
                android:layout_width="@dimen/vector_icon_size"
                android:layout_height="@dimen/vector_icon_size"
                android:src="@drawable/ic_previous_vector" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="@dimen/vector_icon_size"
                android:layout_height="@dimen/vector_icon_size"
                android:src="@drawable/ic_play_vector"
                android:layout_marginLeft="@dimen/dialog_media_player_padding"
                android:layout_marginRight="@dimen/dialog_media_player_padding"/>

            <ImageView
                android:id="@+id/next"
                android:layout_width="@dimen/vector_icon_size"
                android:layout_height="@dimen/vector_icon_size"
                android:src="@drawable/ic_next_vector" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/media_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginLeft="@dimen/dialog_media_player_padding"
            android:layout_marginRight="@dimen/dialog_media_player_padding"
            android:layout_marginTop="@dimen/dialog_media_player_padding">

            <SeekBar
                android:id="@+id/media_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/length"
                android:layout_toRightOf="@+id/progress"
                android:background="@null"
                android:max="100"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="0dp" />

            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/normal_text_size"
                tools:text="@string/init_time" />

            <TextView
                android:id="@+id/length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/normal_text_size"
                tools:text="@string/init_time" />

        </RelativeLayout>

    </RelativeLayout>

</layout>
