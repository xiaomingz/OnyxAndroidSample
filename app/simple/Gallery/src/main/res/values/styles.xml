<resources>

    <style name="AppTheme" parent="@style/OnyxAppCompat.ActionBar"/>

    <style name="FullScreenTheme.Base" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="FullScreenTheme" parent="FullScreenTheme.Base"/>

    <style name="RadioButtonStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/medium_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
    </style>

    <style name="CheckBoxStyle" parent="@style/RadioButtonStyle">
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingBottom">@dimen/activity_margin</item>
    </style>

</resources>
