<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/OnyxAppCompat.ActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">@dimen/action_bar_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FullScreenTheme.Base" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="FullScreenTheme" parent="FullScreenTheme.Base" />

    <style name="RadioButtonStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/medium_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
    </style>

    <style name="CheckBoxStyle" parent="@style/RadioButtonStyle">
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingBottom">@dimen/activity_margin</item>
    </style>


    <style name="main_menu_bottom_progress_light_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/reader_menu_progress_and_light_bg</item>
    </style>

    <style name="main_menu_bottom_iv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">@dimen/ic_read_progress_padding_top</item>
    </style>


    <style name="main_menu_bottom_progress_light_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">@dimen/common_large_text_size</item>
    </style>

    <style name="dialog_format_parent_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dialog_parent_layout_padding_left</item>
        <item name="android:layout_marginRight">@dimen/dialog_parent_layout_padding_left</item>
        <item name="android:layout_marginTop">@dimen/dialog_text_style_layout_margin_top</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog_text_style_radio_button">
        <item name="android:background">@drawable/common_bg_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/font_face_name_height</item>
        <item name="android:layout_height">@dimen/font_face_name_height</item>
        <item name="android:paddingTop">@dimen/radio_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/radio_button_padding_top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_middle_mode</item>
    </style>

    <style name="text_style_spacing_style_name">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">@dimen/seekbar_with_text_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_size_large_mode</item>
        <item name="android:textColor">@color/normal_black</item>
    </style>

    <style name="seek_bar_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:maxHeight">@dimen/seekbar_with_text_seekbar_height</item>
        <item name="android:minHeight">@dimen/seekbar_with_text_seekbar_height</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/seekbar_padding</item>
        <item name="android:paddingStart" tools:ignore="NewApi">0dp</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">0dp</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:progressDrawable">@drawable/seekbar_with_text_progress</item>
        <item name="android:thumb">@drawable/seekbar_with_text_thumb</item>
    </style>

    <style name="single_line_X_axis_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="dialog_font_option">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_text_style_layout_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_large_mode</item>
        <item name="android:background">@drawable/dialog_font_option_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="title_bar_item_back_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_title_bar_back_selector</item>
        <item name="android:drawablePadding">@dimen/item_title_bar_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dialog_normal_font_size</item>
    </style>

    <style name="note_title_bar_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_click_solid</item>
        <item name="android:padding">@dimen/image_btn_padding</item>
        <item name="android:layout_marginRight">@dimen/note_title_bar_item_margin</item>
    </style>

    <style name="text">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="background_btn">
        <item name="android:layout_marginLeft">@dimen/background_bottom_layout_padding</item>
        <item name="android:layout_marginRight">@dimen/background_bottom_layout_padding</item>
        <item name="android:padding">@dimen/image_btn_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_click_solid</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="status_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/normal_black</item>
        <item name="android:textSize">@dimen/text_size_large_mode</item>
    </style>

    <style name="status_text_view_under_line" parent="status_text_view">
        <item name="android:background">@drawable/bottom_line</item>
    </style>
    <style name="kcb_item_title_text_style">
        <item name="android:textSize">@dimen/kcb_item_title_text_size</item>
    </style>

</resources>
