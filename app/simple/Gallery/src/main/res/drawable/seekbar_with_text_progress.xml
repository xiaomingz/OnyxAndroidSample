<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:gravity="center">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/normal_black" />
            <solid android:color="@color/white"/>
            <size android:height="@dimen/menu_progress_seek_bar_height"/>
            <corners android:radius="@dimen/fillet_radius" />
        </shape>
    </item>
    <item android:id="@android:id/progress" android:gravity="center">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/normal_black"/>
                <size android:height="@dimen/menu_progress_seek_bar_height"/>
                <corners android:radius="@dimen/fillet_radius" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress" android:gravity="center">
        <clip>
            <shape android:shape="rectangle">
                <stroke android:width="1dp"
                    android:color="@color/normal_black" />
                <solid android:color="@color/white"/>
                <size android:height="@dimen/menu_progress_seek_bar_height"/>
                <corners android:radius="@dimen/fillet_radius" />
            </shape>
        </clip>
    </item>
</layer-list>