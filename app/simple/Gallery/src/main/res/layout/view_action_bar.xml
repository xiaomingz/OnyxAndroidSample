<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_size"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llBlack"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/view_action_bar_title_margin"
        android:paddingRight="@dimen/view_action_bar_title_margin">

        <ImageView
            android:onClick="onBlackClick"
            android:id="@+id/ivNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_black" />

        <TextView
            android:ellipsize = "middle"
            android:singleLine="true"
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_title_tv_margin"
            android:text=""
            android:textSize="@dimen/view_action_bar_title_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/view_action_bar_title_margin"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:background="@drawable/ic_note_undo"
            android:clickable="true"
            android:onClick="onUndoClick"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivRedo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:background="@drawable/ic_note_redo"
            android:clickable="true"
            android:onClick="onRedoClick"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:background="@drawable/ic_note_save"
            android:clickable="true"
            android:onClick="onSaveClick"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:background="@drawable/ic_ok"
            android:clickable="true"
            android:onClick="onOkClick"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:background="@drawable/selector_start"
            android:clickable="true"
            android:onClick="onFavoritesClick"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:onClick="onEditClick"
            android:src="@drawable/ic_edit_vector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivProperties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:onClick="onPropertiesClick"
            android:src="@drawable/ic_properties_vector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:onClick="onShareClick"
            android:src="@drawable/ic_share_vector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:onClick="onDeleteClick"
            android:src="@drawable/ic_delete_vector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_action_bar_menu_margin"
            android:onClick="onMoreClick"
            android:src="@drawable/ic_more"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>

