<view xmlns:android="http://schemas.android.com/apk/res/android"
    class="com.android.dialer.dialpad.DialpadFragment$DialpadSlidingRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- spacer view -->
        <View
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000" />
        <!-- Dialpad shadow -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/shadow_length"
            android:background="@drawable/shadow_fade_up" />

        <include layout="@layout/dialpad_view" />
        <!-- "Dialpad chooser" UI, shown only when the user brings up the
                 Dialer while a call is already in progress.
                 When this UI is visible, the other Dialer elements
                 (the textfield/button and the dialpad) are hidden. -->
        <ListView
            android:id="@+id/dialpadChooser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_dialer_light"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Margin bottom and alignParentBottom don't work well together, so use a Space instead. -->
    <Space
        android:id="@+id/dialpad_floating_action_button_margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/floating_action_button_margin_bottom"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/dialpad_floating_action_button_margin_bottom"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_call_1"
            android:layout_width="@dimen/onyx_call_button_with"
            android:layout_height="@dimen/onyx_call_button_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/imagebtn_press_response_bg"
            android:drawableLeft="@drawable/ic_call_1"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="@dimen/call_button_drawable_padding_left"
            android:textColor="@android:color/black"
            android:textSize="@dimen/call_button_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_call_2"
            android:layout_width="@dimen/onyx_call_button_with"
            android:layout_height="@dimen/onyx_call_button_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/call_button_space"
            android:background="@drawable/imagebtn_press_response_bg"
            android:drawableLeft="@drawable/ic_call_2"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="@dimen/call_button_drawable_padding_left"
            android:textColor="@android:color/black"
            android:textSize="@dimen/call_button_text_size"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/button_back"
        android:layout_width="@dimen/dialpad_back_button_size"
        android:layout_height="@dimen/dialpad_back_button_size"
        android:layout_above="@id/dialpad_floating_action_button_margin_bottom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dialpad_back_button_margin_right"
        android:src="@drawable/ic_pad" />

</view>
